{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':semanticCommits',
    ':dependencyDashboard',
    'group:allNonMajor',
  ],
  timezone: 'America/New_York',
  schedule: [
    'after 9pm on sunday',
  ],
  minimumReleaseAge: '3 days',
  rangeStrategy: 'bump',
  labels: [
    'dependencies',
  ],
  prConcurrentLimit: 5,
  prHourlyLimit: 2,
  automerge: true,
  automergeType: 'pr',
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
    schedule: [
      'after 9pm on sunday',
    ],
  },
  packageRules: [
    {
      matchDepTypes: [
        'devDependencies',
      ],
      matchUpdateTypes: [
        'patch',
        'minor',
      ],
      automerge: true,
    },
    {
      matchUpdateTypes: [
        'major',
      ],
      automerge: false,
    },
    {
      matchDepTypes: [
        'peerDependencies',
      ],
      enabled: false,
    },
    {
      groupName: 'ESLint & Prettier',
      schedule: [
        'after 9pm on sunday',
      ],
      matchPackageNames: [
        'eslint',
        'eslint-config-prettier',
        'prettier',
        '/^eslint-plugin-.*/',
        '/^@typescript-eslint/.*/',
      ],
    },
    {
      groupName: 'Type Definitions',
      schedule: [
        'after 9pm on sunday',
      ],
      matchPackageNames: [
        '/^@types\\/.*/',
      ],
    },
    {
      groupName: 'Release & Commit tooling',
      schedule: [
        'after 9pm on sunday',
      ],
      matchPackageNames: [
        'release-it',
        '@release-it/conventional-changelog',
        'husky',
        '@commitlint/cli',
        '@commitlint/config-angular',
        'commitizen',
        'cz-conventional-changelog',
      ],
    },
    {
      groupName: 'Test tooling',
      schedule: [
        'after 9pm on sunday',
      ],
      matchPackageNames: [
        'tape',
        'tap-spec',
      ],
    },
  ],
}
